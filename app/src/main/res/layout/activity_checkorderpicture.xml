<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:background="@color/default_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.CheckOrderPictureActivity">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_background"
        />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/percentRL_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/title_background"
        app:layout_heightPercent="@string/title_height"
        app:layout_widthPercent="@string/title_width">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="查看电子签名"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_goback"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/title_imageview_paddingbottom"
            android:paddingLeft="@dimen/title_imageview_paddingleft"
            android:paddingRight="@dimen/title_imageview_paddingright"
            android:paddingTop="@dimen/title_imageview_paddingtop"
            android:src="@drawable/back" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginTop="@dimen/checkorderpicture_textview_margintop"
        android:paddingLeft="@dimen/checkorderpicture_textview_paddingleft"
        android:paddingRight="@dimen/checkorderpicture_textview_paddingright"
        android:text="客户签名:"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageview_customer_autograph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/checkorderpicture_imageview_margintop"
        android:layout_marginLeft="@dimen/checkorderpicture_imageview_marginleft"
        android:layout_marginRight="@dimen/checkorderpicture_imageview_marginright"
        android:background="@drawable/ic_imageview_default_bg"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/checkorderpicture_textview_margintop"
        android:paddingLeft="@dimen/checkorderpicture_textview_paddingleft"
        android:paddingRight="@dimen/checkorderpicture_textview_paddingright"
        android:text="交货现场1:"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageview_picture1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/checkorderpicture_imageview_margintop"
        android:layout_marginLeft="@dimen/checkorderpicture_imageview_marginleft"
        android:layout_marginRight="@dimen/checkorderpicture_imageview_marginright"
        android:background="@drawable/ic_imageview_default_bg"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/checkorderpicture_textview_margintop"
        android:paddingLeft="@dimen/checkorderpicture_textview_paddingleft"
        android:paddingRight="@dimen/checkorderpicture_textview_paddingright"
        android:text="交货现场2:"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView_picture2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/checkorderpicture_imageview_margintop"
        android:layout_marginLeft="@dimen/checkorderpicture_imageview_marginleft"
        android:layout_marginRight="@dimen/checkorderpicture_imageview_marginright"
        android:background="@drawable/ic_imageview_default_bg"
        android:scaleType="fitXY"
        />

</com.zhy.android.percent.support.PercentLinearLayout>
















