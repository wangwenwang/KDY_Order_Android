<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.UpdataPasswordActivity"
    android:orientation="vertical">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_background"
        />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/percentRL_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/title_background"
        app:layout_heightPercent="@string/title_height"
        app:layout_widthPercent="@string/title_width">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_goback"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/title_imageview_paddingbottom"
            android:paddingLeft="@dimen/title_imageview_paddingleft"
            android:paddingRight="@dimen/title_imageview_paddingright"
            android:paddingTop="@dimen/title_imageview_paddingtop"
            android:src="@drawable/back" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/block_pressed_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/minefragment_block_paddingBottom"
        android:paddingLeft="@dimen/minefragment_block_paddingLeft"
        android:paddingRight="@dimen/minefragment_block_paddingRight"
        android:paddingTop="@dimen/minefragment_block_paddingTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:background="@null"
            android:gravity="bottom"
            android:text="原密码:"
            android:textColor="@color/minefragment_block_textcolor"
            android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

        <EditText
            android:id="@+id/edittext_old_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/red"
            android:hint="请输入原密码"
            android:singleLine="true"
            android:background="@drawable/rounded_white_box_bg"
            android:inputType="textPassword"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/block_pressed_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/minefragment_block_paddingBottom"
        android:paddingLeft="@dimen/minefragment_block_paddingLeft"
        android:paddingRight="@dimen/minefragment_block_paddingRight"
        android:paddingTop="@dimen/minefragment_block_paddingTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:background="@null"
            android:gravity="bottom"
            android:text="新密码:"
            android:textColor="@color/minefragment_block_textcolor"
            android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

        <EditText
            android:id="@+id/edittext_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/red"
            android:hint="请输入新密码"
            android:singleLine="true"
            android:background="@drawable/rounded_white_box_bg"
            android:inputType="textPassword"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/block_pressed_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/minefragment_block_paddingBottom"
        android:paddingLeft="@dimen/minefragment_block_paddingLeft"
        android:paddingRight="@dimen/minefragment_block_paddingRight"
        android:paddingTop="@dimen/minefragment_block_paddingTop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:background="@null"
            android:gravity="bottom"
            android:text="新密码:"
            android:textColor="@color/minefragment_block_textcolor"
            android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

        <EditText
            android:id="@+id/edittext_confirm_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/red"
            android:hint="再次输入新密码确认"
            android:singleLine="true"
            android:background="@drawable/rounded_white_box_bg"
            android:inputType="textPassword"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_updata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/button_background_normal_selector"
        android:text="提交"
        android:textSize="@dimen/text_size_bigger"
        android:textColor="@color/white"
        />

</com.zhy.android.percent.support.PercentLinearLayout>














