<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/listview_item_paddingbottom"
            android:paddingLeft="@dimen/listview_item_paddingleft"
            android:paddingRight="@dimen/listview_item_paddingright"
            android:paddingTop="@dimen/listview_item_paddingtop"
            android:background="@drawable/item_listview_shap_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="客户名称:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_PARTY_NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/no_set"
                    android:textColor="@color/red"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="库存月份:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_STOCK_DATE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/no_set"
                    android:textColor="@color/red"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="填表日期:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_SUBMIT_DATE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/no_set"
                    android:textColor="@color/red"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="操作人名:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_USER_NAME"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:textSize="@dimen/text_size_normal"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="业务名称:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_BUSINESS_NAME"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:textSize="@dimen/text_size_normal"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="创建时间:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_ADD_DATE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:textSize="@dimen/text_size_normal"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="修改时间:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/tv_EDIT_DATE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:textSize="@dimen/text_size_normal"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>