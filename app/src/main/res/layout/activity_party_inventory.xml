<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.MakeOrderActivity">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_background"
        />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/percentRL_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/title_background"
        app:layout_heightPercent="@string/title_height"
        app:layout_widthPercent="@string/title_width">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="客户库存管理"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_goback"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/title_imageview_paddingbottom"
            android:paddingLeft="@dimen/title_imageview_paddingleft"
            android:paddingRight="@dimen/title_imageview_paddingright"
            android:paddingTop="@dimen/title_imageview_paddingtop"
            android:src="@drawable/back" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/listview_item_paddingleft"
        android:paddingRight="@dimen/listview_item_paddingright"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/line_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="客户名称:"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:background="@null"
                android:text="@string/no_set"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="客户城市:"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_customer_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:background="@null"
                android:text="@string/no_set"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="客户地址:"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_customer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:background="@null"
                android:text="@string/no_set"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="联系人名:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:background="@null"
                    android:text="@string/no_set"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="联系方式:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_person_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:background="@null"
                    android:text="@string/no_set"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollview_partyinventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/red"
                    />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%h"
                    app:layout_widthPercent="100%w">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_input_list"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"

                        >
                        <ImageView
                            android:id="@+id/imageview_inout_list"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_input_list"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_inout_list"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="入库明细"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"/>
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_input_return"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"

                        >
                        <ImageView
                            android:id="@+id/imageview_salesReturn_manage"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_input_return"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_salesReturn_manage"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="入库退货"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"/>
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_checkInventory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"

                        >
                        <ImageView
                            android:id="@+id/imageview_checkInventory"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_checkinventory"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_checkInventory"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="盘点"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"/>
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_input_other"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"
                        android:visibility="visible"
                        >
                        <ImageView
                            android:id="@+id/imageview_checkorder1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_input_other"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_checkorder1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="其它入库"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                </com.zhy.android.percent.support.PercentLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color" />

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%h"
                    app:layout_widthPercent="100%w">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_output_manage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"
                        >
                        <ImageView
                            android:id="@+id/imageview_output_manage"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_input_list"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_output_manage"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="出库明细"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"/>
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_output_product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"

                        >
                        <ImageView
                            android:id="@+id/imageview_output_product"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_output_product"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_output_product"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="销售出库"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"

                        android:background="@color/line_color"/>
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_output_return"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"
                        >
                        <ImageView
                            android:id="@+id/imageview_track_press2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_input_return"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_track_press2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="出库退货"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_color"/>
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/percentrl_output_other"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/block_pressed_background"
                        >
                        <ImageView
                            android:id="@+id/imageview_track_press3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_imageview_width"
                            app:layout_heightPercent="@string/block_partyInventory_imageview_height"
                            app:layout_marginTopPercent="@string/block_partyInventory_marginTopPercent"
                            app:layout_marginBottomPercent="@string/block_partyInventory_marginBottomPercent"
                            app:layout_marginLeftPercent="@string/block_partyInventory_marginLeftPercent"
                            app:layout_marginRightPercent="@string/block_partyInventory_marginRightPercent"
                            android:src="@drawable/icon_output_other"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/textview_track_press3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_widthPercent="@string/block_partyInventory_textview_width"
                            app:layout_heightPercent="@string/block_partyInventory_textview_height"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_horizontal|top"
                            android:text="其它出库"
                            android:textSize="@dimen/blockTextSize"
                            android:textColor="@color/text_color_normal"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/red"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.kaidongyuan.app.kdyorder.widget.xlistview.XListView
                    android:id="@+id/lv_inventory_productlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/line_color"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:minHeight="@dimen/xlistview_minheight"
                    android:cacheColorHint="#00000000"
                    />

                <TextView
                    android:id="@+id/textview_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/no_data_textview_marginBottom"
                    android:text="@string/no_dataandrefresh"
                    android:textSize="@dimen/no_data_textview_textsize"
                    android:textColor="@color/loginactivity_line_color"
                    android:gravity="center"
                    android:background="@color/white"
                    android:visibility="visible"
                    />


            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>

</com.zhy.android.percent.support.PercentLinearLayout>