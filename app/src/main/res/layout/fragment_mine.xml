<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/title_background"
        app:layout_heightPercent="@string/fragment_title_height"
        app:layout_widthPercent="@string/fragment_title_width">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/menue_mine"
            android:textColor="@color/text_title_color"
            android:textStyle="bold"
            android:textSize="@dimen/title_size" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ScrollView
        android:id="@+id/scrollView_minefragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_person" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_username"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户姓名:"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/minefragment_block_righttextview_textsize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_business"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户角色:"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/minefragment_block_righttextview_textsize" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_businesstype"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="业务类型:"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:id="@+id/tv_business"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/minefragment_block_righttextview_textsize" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_party_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_partymanage"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="客户管理:"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />
                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/more" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_update_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_updatapassword"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />

                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/more" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_manage_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_managermessage"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="管理信息"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />

                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/more" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_my_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_evaluate"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="我的评价"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />

                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/more" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_feed_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_message"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="意见反馈"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />

                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/more"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_check_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_updataversion"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="版本更新:"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:id="@+id/textview_current_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color_normal"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/minefragment_block_righttextview_textsize"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />

                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/more" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/block_pressed_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/minefragment_block_paddingBottom"
                android:paddingLeft="@dimen/minefragment_block_paddingLeft"
                android:paddingRight="@dimen/minefragment_block_paddingRight"
                android:paddingTop="@dimen/minefragment_block_paddingTop">

                <ImageView
                    android:layout_width="@dimen/mimefragment_bloce_leftimageview_width"
                    android:layout_height="@dimen/mimefragment_bloce_leftimageview_height"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_minefragment_about"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="关于"
                    android:textColor="@color/minefragment_block_textcolor"
                    android:textSize="@dimen/minefragment_block_lefttextview_textsize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minWidth="20dp" />

                <ImageView
                    android:layout_width="@dimen/minefragment_block_rightimageview_width"
                    android:layout_height="match_parent"
                    android:src="@drawable/more"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <Button
                    android:id="@+id/switch_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background_normal_selector"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="切换账号"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/exit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_background_normal_selector"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="退出账号"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.zhy.android.percent.support.PercentRelativeLayout>




