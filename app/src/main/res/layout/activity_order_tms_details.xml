<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    tools:context=".ui.activity.OrderTmsDetailsActivity">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_background"
        />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/percentRL_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/topview"
        android:background="@color/title_background"
        app:layout_heightPercent="@string/title_height"
        app:layout_widthPercent="@string/title_width">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="物流信息详情"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_goback"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/title_imageview_paddingbottom"
            android:paddingLeft="@dimen/title_imageview_paddingleft"
            android:paddingRight="@dimen/title_imageview_paddingright"
            android:paddingTop="@dimen/title_imageview_paddingtop"
            android:src="@drawable/back" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/percentRL_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:text="订单信息:"
                android:textSize="@dimen/text_size_bigger"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/listview_item_paddingleft"
                android:paddingRight="@dimen/listview_item_paddingright">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="订单编号:"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_tms_order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                            android:background="@null"
                            android:text="@string/no_set"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_normal"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="装运编号:"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_tms_shipment_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                            android:background="@null"
                            android:text="@string/no_set"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_normal"  />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="装运时间:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_tms_date_load"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal"  />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="出库时间:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_tms_date_issue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal"   />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="承运商名:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_tms_fleet_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal"   />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="车牌号码:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_tms_plate_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal"   />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="司机姓名:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_tms_driver_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal"  />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="司机号码:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_tms_driver_tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal"   />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="下单数量:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_order_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="订单流程:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_order_flow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="下单总重:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_order_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="订单状态:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_order_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="下单体积:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_order_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="付款方式:"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/tv_payment_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                                android:background="@null"
                                android:text="@string/no_set"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_size_normal" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:text="货物信息："
                android:textSize="@dimen/text_size_bigger"
                android:textColor="@color/black"/>

            <com.kaidongyuan.app.kdyorder.widget.MyListView
                android:id="@+id/lv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/listview_item_paddingleft"
                android:paddingRight="@dimen/listview_item_paddingright"
                android:layout_marginTop="2dp"
                android:scrollbars="none"
                android:divider="@null"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>
    </ScrollView>


</com.zhy.android.percent.support.PercentRelativeLayout>




















