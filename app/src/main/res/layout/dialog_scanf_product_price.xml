<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_normal"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入产品价格："
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_title_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可调价格上限:"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/textview_upperlimit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
            android:text="@string/no_set"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/red"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可调价格下限:"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/textview_lowerlimit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
            android:text="@string/no_set"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/red"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/edittext_inputnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_widthPercent="50%w"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_white_box_bg"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/red"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_widthPercent="75%w">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_normal_selector"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_button_textsize" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background_normal_selector"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_button_textsize" />
    </LinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>


