<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/item_gray_bg_selector"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gift"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品编号:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_productNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PD0001"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/details_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品名称:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大瓶怡宝水"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/details_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总库存量:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_product_QTY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/no_set"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用数量:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_product_kesum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/no_set"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/red"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未配货数:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_product_WeiQTYALLOCATED"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/no_set"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已配货数:"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_product_QTYALLOCATED"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/no_set"
                    android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/red"
                    />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_producst"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/more_black"
            android:scaleType="fitXY"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>