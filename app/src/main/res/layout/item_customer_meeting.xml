<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/listview_item_paddingleft"
    android:paddingRight="@dimen/listview_item_paddingright"
    android:paddingTop="@dimen/listview_item_paddingtop"
    android:paddingBottom="@dimen/listview_item_paddingbottom"
    android:background="@drawable/item_listview_selector"
    >
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="@dimen/text_size_normal"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="18000000000"
        android:textSize="@dimen/text_size_normal"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2099/00/00 00:00:00"
        android:textColor="@color/details_text"
        android:textSize="@dimen/text_size_small"/>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="客户名称"
            android:textSize="@dimen/text_size_normal"/>
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:textColor="@color/details_text"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_customer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细地址信息"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/details_text"/>

    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看拜访"
            android:textColor="@color/details_text"
            android:textSize="@dimen/text_size_small"
            android:background="@drawable/rounded_transparent_box_bg"
            android:padding="5dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_transparent_box_bg"
            android:padding="5dp"
            android:text="继续拜访"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_transparent_box_bg"
            android:padding="5dp"
            android:text="拜访"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>