<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">
    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_background"
        />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/percentRL_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="@string/title_width"
        app:layout_heightPercent="@string/title_height"
        android:background="@color/title_background"
        >
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="提交客户库存登记表"
            android:textSize="@dimen/title_size"
            android:textColor="@color/text_title_color"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/button_goback"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/title_imageview_paddingleft"
            android:paddingRight="@dimen/title_imageview_paddingright"
            android:paddingTop="@dimen/title_imageview_paddingtop"
            android:paddingBottom="@dimen/title_imageview_paddingbottom"
            android:src="@drawable/back"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentRL_title"
        android:background="@color/default_bg"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:text="表单信息:"
                android:textSize="@dimen/text_size_bigger"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/listview_item_paddingleft"
                android:paddingRight="@dimen/listview_item_paddingright">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="客户名称:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_PARTY_NAME"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:background="@null"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="客户代码:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_PARTY_CODE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:background="@null"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="业务名称:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_BUSINESS_NAME"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:background="@null"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="库存月份:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_STOCK_DATE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:background="@null"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="填表日期:"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_SUBMIT_DATE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/minefragment_block_righttextview_marginLeft"
                        android:background="@null"
                        android:text="@string/no_set"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="@dimen/minefragment_block_righttextview_marginLeft"
                android:text="货物信息:"
                android:textSize="@dimen/text_size_bigger"
                android:textColor="@color/black"/>


            <com.kaidongyuan.app.kdyorder.widget.MyListView
                android:id="@+id/lv_appstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:paddingLeft="@dimen/listview_item_paddingleft"
                android:paddingRight="@dimen/listview_item_paddingright"
                android:scrollbars="none" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/red" />

            <Button
                android:id="@+id/bt_confirm_appstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/checkorderpicture_imageview_margintop"
                android:text="确\t认\t提\t交"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/text_size_bigger"
                android:background="@drawable/button_background_big_selector"
                />

        </LinearLayout>

    </ScrollView>


</com.zhy.android.percent.support.PercentLinearLayout>